@model IEnumerable<WebApplication3.Models.Przedmiot>


@{
    ViewBag.Title = "Przedmioty";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<style>

    .field-validation-error {
        color: red;
    }

    .input-validation-error {
        border: 2px solid red;
    }
</style>



<h2>Przedmioty</h2>



<table id="przedmiots" class="table table-bordered table-hover" style="font-size:18px;">
    <thead>
        <tr>
            <th>Zdjęcie</th>
            <th>Nazwa</th>
            <th>Kategoria</th>
            <th>Producent</th>
            <th>Cena</th>
            <th>Opis</th>
            <th>Kup</th>



        </tr>
    </thead>

    <tbody>
        @foreach (var przedmiot in Model)
        {
            <tr>
                <td>
                    <center>  <img height="50" src="@Html.DisplayFor(modelItem => przedmiot.Zdjecie)" /></center>
                </td>
                <td><center>@przedmiot.Nazwa</center></td>
                <td><center>@przedmiot.Kategoria.Nazwa</center></td>
                <td><center>@przedmiot.Producent.Nazwa</center></td>
                <td><center>@przedmiot.Cena</center></td>
                <td><center>@przedmiot.Opis</center></td>
                
                
                

                <td>
                    <center> @Html.ActionLink("Kup", "Buy", "Tranzakcjes", new {prodId = przedmiot.ID, prodcen = przedmiot.Cena, prodnaz = przedmiot.Nazwa}, new {@class = "btn btn-primary"})</center>
                </td>







                
</tr>
}
</tbody>
</table>














